<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema Utama Aplikasi (Mod Siang) -->
    <style name="Theme.ZakatGoldApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Warna Jenama Utama -->
        <item name="colorPrimary">@color/gold_primary</item>
        <item name="colorPrimaryVariant">@color/gold_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Warna Jenama Sekunder -->
        <item name="colorSecondary">@color/brown_500</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Warna Latar Belakang -->
        <item name="android:windowBackground">@color/gray_light</item>
        <item name="colorSurface">@color/white</item> <!-- Warna untuk CardView -->
        <item name="colorOnSurface">@color/black</item> <!-- Warna untuk teks di atas CardView -->

        <!-- Warna Status Bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="M">true</item>
    </style>

</resources>
    